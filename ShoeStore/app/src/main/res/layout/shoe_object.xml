<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Data definition for the Shoe model class-->
    <data>

        <variable
            name="shoe"
            type="com.laggerlimited.shoestore.models.Shoe" />
    </data>
    <!--LinearLayout holds the Shoe details for each Shoe object instantiated-->
    <LinearLayout
        android:id="@+id/shoeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/shoe_layout_margin"
        android:background="@color/teal_700"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTextView"
            style="@style/ShoeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/shoe_object_margin_left"
            android:layout_marginTop="@dimen/shoe_object_margin_start_end"
            android:layout_marginEnd="@dimen/shoe_object_margin_right"
            android:text="@{shoe.name}" />

        <TextView
            android:id="@+id/companyTextView"
            style="@style/ShoeCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/shoe_object_margin_left"
            android:layout_marginTop="@dimen/shoe_object_margin_top"
            android:layout_marginEnd="@dimen/shoe_object_margin_right"
            android:text="@{shoe.company}" />

        <TextView
            android:id="@+id/sizeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/shoe_object_margin_left"
            android:layout_marginTop="@dimen/shoe_object_margin_top"
            android:layout_marginEnd="@dimen/shoe_object_margin_right"
            android:text="@{Double.toString(shoe.size)}"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/descriptionTextView"
            style="@style/ShoeDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/shoe_object_margin_left"
            android:layout_marginTop="@dimen/shoe_object_margin_top"
            android:layout_marginEnd="@dimen/shoe_object_margin_right"
            android:layout_marginBottom="@dimen/shoe_object_margin_start_end"
            android:text="@{shoe.description}" />

    </LinearLayout>
</layout>