<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShoeName">
        <item name="android:fontFamily">@font/quando</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShoeCompany">
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ShoeDesc">
        <item name="android:fontFamily">@font/abel</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="LabelStyle">
        <item name="android:fontFamily">@font/quando</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@android:drawable/btn_default_small</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/quando</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:fontFamily">@font/abel</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>